rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Dialect learning (solo usuarios autenticados pueden escribir)
    match /dialect_learning/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Glosario (lectura libre, escritura restringida)
    match /dialect_glossary/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Chats (guardar conversaciones)
    match /chats/{docId} {
      allow read, write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // This rule allows anyone with your Firestore database reference to view, edit,
    // and delete all data in your Firestore database. It is useful for getting
    // started, but it is configured to expire after 30 days because it
    // leaves your app open to attackers. At that time, all client
    // requests to your Firestore database will be denied.
    //
    // Make sure to write security rules for your app before that time, or else
    // all client requests to your Firestore database will be denied until you Update
    // your rules
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 11, 15);
    }
  }
}